{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": ["@playwright/test", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./tests/*"],
      "@fixtures/*": ["./tests/fixtures/*"],
      "@pages/*": ["./tests/pages/*"],
      "@utils/*": ["./tests/utils/*"]
    }
  },
  "include": ["tests/**/*.ts"],
  "exclude": ["node_modules", "test-report", "test-results"]
}